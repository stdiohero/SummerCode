<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guru.pa">

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 网络请求权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_p"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogIn"
            android:label="@string/title_activity_log_in"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".MoneyManage"
            android:label="@string/title_activity_money_manage"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".JourneyManage"
            android:label="行程管理"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".PasswordManage"
            android:label="密码">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="设置">
        </activity>
        <activity
            android:name=".Bill"
            android:label="账单">
        </activity>
        <activity
            android:name=".AddJourney"
            android:label="添加行程">
        </activity>
        <activity
            android:name=".AddBill"
            android:label="记一笔">
        </activity>
        <activity
            android:name=".Register"
            android:label="注册">
        </activity>
        <activity
            android:name=".AddPassword"
            android:label="添加用户密码">
        </activity>
        <activity android:name=".SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".AccountCenter"
            android:label="个人中心">
        </activity>
        <activity
            android:name=".JourneyDetail"
            android:label="行程详情">
        </activity>
        <activity
            android:name=".MoneyDetail"
            android:label="账单详情">
        </activity>
        <activity
            android:name=".PasswordDetail"
            android:label="密码详情">
        </activity>
        <activity android:name=".ChartView"
            android:label="图表" >

        </activity>
    </application>

</manifest>